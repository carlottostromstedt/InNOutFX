<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.innoutfx.InNOutController" stylesheets="@application.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <Label fx:id="titleLabel" text="Carls Burger Joint">
            <font>
                <Font name="Comic Sans" size="50.0" />
            </font>
        </Label>
        <Label fx:id="titleLabel2" text="The best burgers" style="-fx-padding: 35 0 0 15;">
            <font>
                <Font name="Comic Sans" size="15.0" />
            </font>
        </Label>
        <padding>
            <Insets left="20.0" right="20.0"/>
        </padding>
    </HBox>
    <HBox>
        <!-- ImageViews on the right -->
        <VBox spacing="2.0" alignment="CENTER" prefWidth="600">
            <VBox.margin>
                <Insets top="100"/>
            </VBox.margin>

            <ImageView fx:id="topView" fitHeight="100" fitWidth="250" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="topImage" url="@../../../img/top.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="slot6View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot6Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="slot5View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot5Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>


            <ImageView fx:id="slot4View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot4Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="slot3View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot3Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="slot2View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot2Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="slot1View" fitHeight="100" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="slot1Image" url="@../../../img/cheese.png"/>
                <VBox.margin>
                    <Insets bottom="-80"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="pattyView" fitHeight="80" fitWidth="230" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="pattyImage" url="@../../../img/patty.png"/>
                <VBox.margin>
                    <Insets bottom="-60"/>
                </VBox.margin>
            </ImageView>

            <ImageView fx:id="bottomView" fitHeight="100" fitWidth="250" visible="false" style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <Image fx:id="bottomImage" url="@../../../img/bottom.png"/>
            </ImageView>
        </VBox>

        <VBox spacing="2.0" prefWidth="500">
            <VBox.margin>
                <Insets right="50"/>
            </VBox.margin>
            <VBox prefWidth="300" prefHeight="250" style="-fx-background-color: white;-fx-padding: 50 0 50 0; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.3), 10, 0.5, 0.0, 0.0)">
                <VBox.margin>
                    <Insets right="50" top="50"/>
                </VBox.margin>
                <Label fx:id="titleLabelReceipt" text="Carls Burger Joint">
                    <VBox.margin>
                        <Insets left="35"/>
                    </VBox.margin>
                    <font>
                        <Font name="Courier New" size="20.0" />
                    </font>
                </Label>
                <Label fx:id="preisLabelPatty" text="0" visible="false" style="-fx-font-family: 'Courier New', monospace" >
                    <VBox.margin>
                        <Insets left="50" top="40" bottom="15"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="preisLabel1" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="preisLabel2" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="preisLabel3" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="preisLabel4" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="preisLabel5" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="preisLabel6" text="0" visible="false" style="-fx-padding: 10 0 0 75;-fx-font-family: 'Courier New', monospace"/>
                <Label fx:id="lineLabel" text="__________________________" visible="false" style="-fx-font-family: 'Courier New', monospace">
                    <VBox.margin>
                        <Insets left="50" bottom="20"/>
                    </VBox.margin>
                </Label>
                <Label fx:id="preisLabelTotal" text="0" visible="false" style="-fx-padding: 0 0 0 75;-fx-font-family: 'Courier New', monospace"/>
            </VBox>
        </VBox>

        <!-- Labels and Buttons on the left -->
        <VBox spacing="2.0" prefWidth="400">
            <VBox.margin>
                <Insets left="200"/>
            </VBox.margin>
            <Label fx:id="welcomeText"/>
            <Button fx:id="resetButton" text="Reset" onAction="#onResetButtonClick"/>
            <Label fx:id="burgerText" id="burgerText" wrapText="true" prefHeight="150"/>
            <Button fx:id="burgerButton" text="Beef Burger" onAction="#onBurgerButtonClick"/>
            <Button fx:id="veggieBurgerButton" text="Veggie Burger" onAction="#onVeggieBurgerButtonClick"/>
            <Button fx:id="chickenBurgerButton" text="Chicken Burger" onAction="#onChickenBurgerButtonClick"/>
            <Button fx:id="cheesePutterButton" text="Cheese" onAction="#onCheeseButtonClick"/>
            <Button fx:id="baconButton" text="Bacon" onAction="#onBaconButtonClick"/>
            <Button fx:id="saladButton" text="Salad" onAction="#onSaladButtonClick"/>
            <Button fx:id="onionButton" text="Onion" onAction="#onOnionButtonClick"/>
            <Button fx:id="extraPattyButton" text="Extra Patty" onAction="#onExtraPattyButtonClick"/>
        </VBox>
    </HBox>


    <!-- Other ImageViews at the bottom -->
    <ImageView fx:id="cheeseView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="cheeseImage" url="@../../../img/cheese.png"/>
    </ImageView>

    <ImageView fx:id="baconView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="baconImage" url="@../../../img/bacon.png"/>
    </ImageView>

    <ImageView fx:id="saladView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="saladImage" url="@../../../img/salad.png"/>
    </ImageView>

    <ImageView fx:id="onionView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="onionImage" url="@../../../img/onion.png"/>
    </ImageView>

    <ImageView fx:id="veggiePattyView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="veggiePattyImage" url="@../../../img/veggiepatty.png"/>
    </ImageView>

    <ImageView fx:id="chickenPattyView" fitHeight="2" fitWidth="2" visible="false">
        <Image fx:id="chickenPattyImage" url="@../../../img/chickenpatty.png"/>
    </ImageView>
</VBox>
